{
  "name": "hello-devops",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsx src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate": "tsx src/migrate.ts up",
    "migrate:status": "tsx src/migrate.ts status",
    "openapi:gen": "tsx src/openapi-gen.ts",
    "test": "vitest run",
    "lint": "eslint .",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@fastify/basic-auth": "^5.1.1",
    "@fastify/cors": "8.4.2",
    "@fastify/helmet": "11.1.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/rate-limit": "^9.0.0",
    "@fastify/swagger": "^8",
    "@fastify/swagger-ui": "^1",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.4.5",
    "fastify": "^4.29.1",
    "fastify-plugin": "^5.0.1",
    "kysely": "^0.28.7",
    "mysql2": "^3.11.3",
    "pino": "^9.4.0",
    "prom-client": "^15.1.3",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "22.5.4",
    "@vitest/coverage-v8": "^2.1.9",
    "openapi-response-validator": "^12.1.3",
    "openapi-types": "^12.1.3",
    "tsx": "^4.19.2",
    "typescript": "^5.6.2",
    "vitest": "^2.1.9"
  },
  "lint-staged": {
    "*.{ts,js,json,md,yml,yaml}": [
      "pnpm exec prettier -w"
    ],
    "src/**/*.ts": [
      "pnpm exec eslint --fix"
    ]
  }
}
